<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/TextEmail"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="390dp"
        android:ems="10"
        android:hint="Ingrese Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="319dp"
        android:ems="10"
        android:hint="Ingrese ContraseÃ±a"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="169dp"
        android:background="#1D53E4"
        android:backgroundTint="#CA3F14"
        android:text="@string/Login"
        android:textAlignment="center"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        android:textStyle="normal"
        app:rippleColor="#8C0E0E"
        app:strokeColor="#EDEDE8" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="207dp"
        android:layout_height="144dp"
        android:layout_above="@+id/TextEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/logocopaamericaparcial" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="72dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="16dp"
        android:text="@string/Login1"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="34sp"
        android:textStyle="bold" />

</RelativeLayout>